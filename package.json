{
  "name": "doc-generator",
  "type": "module",
  "version": "0.0.1",
  "module": "src/index.ts",
  "scripts": {
    "build": "bun run ./src/index.ts",
    "docker:build": "docker build --tag robots/docs --target prod .",
    "docker:run": "docker run --publish 8080:8080 --rm robots/docs",
    "docs:build": "vitepress build ./src",
    "docs:dev": "vitepress dev ./src --port 8080",
    "docs:preview": "vitepress preview ./src",
    "docs:sync": "bun run ./src/index.ts",
    "format": "eslint . --fix",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "commander": "^12.1.0",
    "octokit": "^4.0.2",
    "simple-git": "^3.26.0",
    "ungit": "^1.5.27",
    "vitepress": "^1.3.4",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.6.1",
    "@types/bun": "^1.1.9",
    "@types/node": "^22.5.5",
    "eslint": "^9.10.0"
  }
}
