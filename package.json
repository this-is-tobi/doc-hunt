{
  "name": "@tobi-or-not/docpress",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.11.0",
  "main": "src/server.js",
  "module": "src/index.ts",
  "types": "types/server.d.ts",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf ./dist ./types ./tsconfig.tsbuildinfo",
    "dev": "vite-node ./src/index.ts",
    "format": "eslint . --fix",
    "lint": "eslint .",
    "prepare": "husky",
    "start": "node ./dist/index.js",
    "test": "echo 'wip'",
    "vp:build": "vitepress build ./vitepress",
    "vp:build:docker": "docker build --tag robots/docs --target prod .",
    "vp:dev": "vitepress dev ./vitepress --port 8080",
    "vp:dev:docker": "docker run --publish 8080:8080 --rm robots/docs",
    "vp:preview": "vitepress preview ./vitepress"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "commander": "^12.1.0",
    "octokit": "^4.0.2",
    "simple-git": "^3.26.0",
    "vitepress": "^1.3.4",
    "yaml": "^2.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.6.1",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^22.5.5",
    "eslint": "^9.10.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.2",
    "vite": "^5.4.8",
    "vite-node": "^2.1.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "tag": "latest"
  }
}
